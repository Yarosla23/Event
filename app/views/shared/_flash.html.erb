<% if message.present? %>
  <div class="fixed top-4 right-4 z-50" data-controller="flash">
    <div class="<%= type == 'success' ? 'bg-green-500' : 'bg-red-500' %> text-white px-6 py-3 rounded-lg shadow-lg flex items-center justify-between">
      <span><%= message %></span>
      <button class="ml-4 text-white hover:text-gray-200" data-action="flash#close">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
<% end %> 