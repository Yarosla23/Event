<header class="bg-blue-950 text-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-4 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1 items-center">
      <a href="<%=root_path%>" class="text-xl -m-1.5 p-1.5">
        Эвент знакомства
      </a>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <% if current_page?(root_path) %>
        <a href="#about" class="text-sm/6 font-semibold">О нас</a>
        <a href="#possibilities" class="text-sm/6 font-semibold">Возможности</a>
        <a href="#FAQs" class="text-sm/6 font-semibold">FAQs</a>
      <% end %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if current_user.present? %>
        <%= link_to "События", events_path, class:"text-sm/6 font-semibold pr-6" %>
        <%= link_to "Аренда площадки", venues_path, class:"text-sm/6 font-semibold pr-6" %>
        <% if current_user.profile.present? %>
          <%= link_to "Профиль", user_profile_path(current_user), class: "text-sm/6 font-semibold pr-6", onclick: "window.location.href=this.href; return false;" %>
        <% else %>
          <%= link_to "Профиль", new_user_profile_path(current_user), class: "text-sm/6 font-semibold pr-6", onclick: "window.location.href=this.href; return false;" %>
        <% end %>
        <%= link_to 'Выход <span aria-hidden="true">→</span>'.html_safe, destroy_user_session_path, data: { turbo_method: :delete }, class: 'text-sm/6 font-semibold' %>
      <% else %>
        <%= link_to 'Вход <span aria-hidden="true">→</span>'.html_safe, user_session_path, class: 'text-sm/6 font-semibold' %>
      <% end %>
      <button id="theme-toggle" class="ml-10">
        <svg data-toggle-icon="sun" class="w-3.5 h-3.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 15a5 5 0 1 0 0-10 5 5 0 0 0 0 10Zm0-11a1 1 0 0 0 1-1V1a1 1 0 0 0-2 0v2a1 1 0 0 0 1 1Zm0 12a1 1 0 0 0-1 1v2a1 1 0 1 0 2 0v-2a1 1 0 0 0-1-1ZM4.343 5.757a1 1 0 0 0 1.414-1.414L4.343 2.929a1 1 0 0 0-1.414 1.414l1.414 1.414Zm11.314 8.486a1 1 0 0 0-1.414 1.414l1.414 1.414a1 1 0 0 0 1.414-1.414l-1.414-1.414ZM4 10a1 1 0 0 0-1-1H1a1 1 0 0 0 0 2h2a1 1 0 0 0 1-1Zm15-1h-2a1 1 0 1 0 0 2h2a1 1 0 0 0 0-2ZM4.343 14.243l-1.414 1.414a1 1 0 1 0 1.414 1.414l1.414-1.414a1 1 0 0 0-1.414-1.414ZM14.95 6.05a1 1 0 0 0 .707-.293l1.414-1.414a1 1 0 1 0-1.414-1.414l-1.414 1.414a1 1 0 0 0 .707 1.707Z"></path>
        </svg>
        <svg data-toggle-icon="moon" class="w-3.5 h-3.5 hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
          <path d="M17.8 13.75a1 1 0 0 0-.859-.5A7.488 7.488 0 0 1 10.52 2a1 1 0 0 0 0-.969A1.035 1.035 0 0 0 9.687.5h-.113a9.5 9.5 0 1 0 8.222 14.247 1 1 0 0 0 .004-.997Z"></path>
        </svg>
      </button>
    </div>
  </nav>

  <div class="lg:hidden fixed bottom-0 left-0 right-0 bg-blue-950 border-t border-gray-700 z-50 supports-[height:100dvh]:h-[60px] h-[60px]">
    <div class="flex justify-around items-center h-full px-2 relative">
      <% if current_user.blank? %>
        <button id="mobile-theme-toggle" class="flex flex-col items-center text-white hover:text-gray-300">
          <svg data-toggle-icon="sun" class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"  d="M10 15a5 5 0 1 0 0-10 5 5 0 0 0 0 10Zm0-11a1 1 0 0 0 1-1V1a1 1 0 0 0-2 0v2a1 1 0 0 0 1 1Zm0 12a1 1 0 0 0-1 1v2a1 1 0 1 0 2 0v-2a1 1 0 0 0-1-1ZM4.343 5.757a1 1 0 0 0 1.414-1.414L4.343 2.929a1 1 0 0 0-1.414 1.414l1.414 1.414Zm11.314 8.486a1 1 0 0 0-1.414 1.414l1.414 1.414a1 1 0 0 0 1.414-1.414l-1.414-1.414ZM4 10a1 1 0 0 0-1-1H1a1 1 0 0 0 0 2h2a1 1 0 0 0 1-1Zm15-1h-2a1 1 0 1 0 0 2h2a1 1 0 0 0 0-2ZM4.343 14.243l-1.414 1.414a1 1 0 1 0 1.414 1.414l1.414-1.414a1 1 0 0 0-1.414-1.414ZM14.95 6.05a1 1 0 0 0 .707-.293l1.414-1.414a1 1 0 1 0-1.414-1.414l-1.414 1.414a1 1 0 0 0 .707 1.707Z"></path>
          </svg>
          <svg data-toggle-icon="moon" class="w-5 h-5 hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.8 13.75a1 1 0 0 0-.859-.5A7.488 7.488 0 0 1 10.52 2a1 1 0 0 0 0-.969A1.035 1.035 0 0 0 9.687.5h-.113a9.5 9.5 0 1 0 8.222 14.247 1 1 0 0 0 .004-.997Z"></path>
          </svg>
          <span class="text-xs mt-1">Тема</span>
        </button>
      <% end %>

      <%= link_to root_path, class: "flex flex-col items-center #{current_page?(root_path) ? 'text-blue-300' : 'text-white hover:text-gray-300'}" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 2v10a2 2 0 002-2v-6h4v6a2 2 0 002-2V12m-6-2h6"></path>
        </svg>
        <span class="text-xs mt-1">Главная</span>
      <% end %>
      <% if current_user.present? %>
        <%= link_to venues_path, class: "flex flex-col items-center #{current_page?(venues_path) ? 'text-blue-300' : 'text-white hover:text-gray-300'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h-4m-6 0H5m4-4h6"></path>
          </svg>
          <span class="text-xs mt-1">Площадки</span>
        <% end %>
        <%= link_to events_path, class: "flex flex-col items-center #{current_page?(events_path) ? 'text-blue-300' : 'text-white hover:text-gray-300'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-xs mt-1">События</span>
        <% end %>

        <div class="relative">
          <button id="profile-toggle" class="flex flex-col items-center text-white hover:text-gray-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-xs mt-1">Профиль</span>
          </button>

          <div id="profile-dropdown" class="hidden absolute bottom-16 right-[-50px] bg-blue-950 border border-gray-700 rounded-md shadow-lg z-50 w-40">
            <%= link_to (current_user.profile.present? ? user_profile_path(current_user) : new_user_profile_path(current_user)), class: "block px-4 py-2 text-sm text-white hover:bg-blue-900" do %>
              Профиль
            <% end %>

            <%= link_to "Выход", destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-white hover:bg-blue-900" %>
            <button id="mobile-theme-toggle" class="block w-full text-left px-4 py-2 text-sm text-white hover:bg-blue-900 flex items-center">
              Тема
              <svg data-toggle-icon="sun" class="w-3.5 h-3.5  ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 15a5 5 0 1 0 0-10 5 5 0 0 0 0 10Zm0-11a1 1 0 0 0 1-1V1a1 1 0 0 0-2 0v2a1 1 0 0 0 1 1Zm0 12a1 1 0 0 0-1 1v2a1 1 0 1 0 2 0v-2a1 1 0 0 0-1-1ZM4.343 5.757a1 1 0 0 0 1.414-1.414L4.343 2.929a1 1 0 0 0-1.414 1.414l1.414 1.414Zm11.314 8.486a1 1 0 0 0-1.414 1.414l1.414 1.414a1 1 0 0 0 1.414-1.414l-1.414-1.414ZM4 10a1 1 0 0 0-1-1H1a1 1 0 0 0 0 2h2a1 1 0 0 0 1-1Zm15-1h-2a1 1 0 1 0 0 2h2a1 1 0 0 0 0-2ZM4.343 14.243l-1.414 1.414a1 1 0 1 0 1.414 1.414l1.414-1.414a1 1 0 0 0-1.414-1.414ZM14.95 6.05a1 1 0 0 0 .707-.293l1.414-1.414a1 1 0 1 0-1.414-1.414l-1.414 1.414a1 1 0 0 0 .707 1.707Z"></path>
              </svg>
              <svg data-toggle-icon="moon" class="w-3.5 h-3.5  ml-2 hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                <path d="M17.8 13.75a1 1 0 0 0-.859-.5A7.488 7.488 0 0 1 10.52 2a1 1 0 0 0 0-.969A1.035 1.035 0 0 0 9.687.5h-.113a9.5 9.5 0 1 0 8.222 14.247 1 1 0 0 0 .004-.997Z"></path>
              </svg>
              </div>
            </button>
        </div>
      <% else %>
        <%= link_to user_session_path, class: "flex flex-col items-center #{current_page?(user_session_path) ? 'text-blue-300' : 'text-white hover:text-gray-300'}" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          <span class="text-xs mt-1">Вход</span>
        <% end %>
      <% end %>
    </div>
  </div>
</header>

<style>
  @media (max-width: 1023px) {
    body {
      padding-bottom: 60px;
      min-height: 100vh;
    }

    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      height: 60px;
      z-index: 100;
    }

    @supports (padding-bottom: env(safe-area-inset-bottom)) {
      .bottom-nav {
        padding-bottom: env(safe-area-inset-bottom);
        height: calc(60px + env(safe-area-inset-bottom));
      }
      body {
        padding-bottom: calc(60px + env(safe-area-inset-bottom));
      }
    }

    #profile-dropdown {
      transition: opacity 0.2s ease-in-out;
    }

    #profile-dropdown.hidden {
      opacity: 0;
      pointer-events: none;
    }

    #profile-dropdown:not(.hidden) {
      opacity: 1;
    }
  }
</style>

<script>
function setupProfileDropdown() {
  const profileToggle = document.getElementById('profile-toggle');
  const profileDropdown = document.getElementById('profile-dropdown');

  if (profileToggle && profileDropdown) {
    profileToggle.removeEventListener('click', toggleDropdown);
    document.removeEventListener('click', closeDropdownOutside);

    profileToggle.addEventListener('click', toggleDropdown);
    document.addEventListener('click', closeDropdownOutside);
  }

  function toggleDropdown(e) {
    e.preventDefault();
    profileDropdown.classList.toggle('hidden');
  }

  function closeDropdownOutside(e) {
    if (!profileToggle.contains(e.target) && !profileDropdown.contains(e.target)) {
      profileDropdown.classList.add('hidden');
    }
  }
}

document.addEventListener('turbo:load', () => {
  setupProfileDropdown();
});

</script>