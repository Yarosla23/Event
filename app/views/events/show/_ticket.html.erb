<div class="mt-6 bg-white dark:bg-gray-700 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
  <h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-6">Билеты на мероприятие</h3>

  <div class="flex flex-wrap gap-6">
    <% tickets.each do |ticket| %>
      <div class="flex-1 min-w-[250px] md:min-w-[415px]  bg-gradient-to-r from-cyan-500 via-blue-500 to-indigo-500 p-6 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 hover:scale-105 transform transition-all duration-300">
        <div class="flex justify-between items-center mb-4">
          <h4 class="text-2xl font-bold text-white"><%= ticket.ticket_type %></h4>
          <span class="text-xl font-semibold text-white"><%= ticket.price %> <%= ticket.currency %></span>
        </div>
        <p class="text-lg text-white mb-2"><strong>Метод оплаты:</strong> <%= ticket.payment_method.join(', ') %></p>

        <div class="flex justify-end mt-4">
          <button class="px-6 py-3 bg-blue-600 text-white rounded-full font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 active:bg-blue-800 transition-all duration-300 ease-in-out transform hover:scale-105">
            Купить
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
