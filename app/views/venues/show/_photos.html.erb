<div class="mt-8">
  <h2 class="text-2xl font-bold mb-4">Медиафайлы</h2>
  
  <% if @venue.media_files.any? %>
    <div class="swiper venue-swiper">
      <div class="swiper-wrapper">
        <% @venue.media_files.each do |media| %>
          <% if media.file_type == 'image' %>
            <div class="swiper-slide">
              <%= cl_image_tag media.file.url, 
                  class: "w-full h-[300px] md:h-[400px] object-cover rounded-lg",
                  crop: :fill %>
            </div>
          <% elsif media.file_type == 'video' %>
            <div class="swiper-slide">
              <video class="w-full h-64 object-cover" controls>
                <source src="<%= media.file.url %>" type="<%= media.content_type %>">
              </video>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>

    <script>
      document.addEventListener('turbo:load', function() {
        new Swiper('.venue-swiper', {
          loop: true,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
        });
      });
    </script>
  <% else %>
    <div class="bg-gray-200 dark:bg-gray-700 rounded-lg h-[300px] md:h-[400px] flex items-center justify-center">
      <p class="text-gray-500 dark:text-gray-400">Нет фотографий</p>
    </div>
  <% end %>
</div> 