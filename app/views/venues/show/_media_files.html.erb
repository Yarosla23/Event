<div class="mt-8">
  <h2 class="text-2xl font-bold mb-4">Медиафайлы</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @venue.media_files.each do |media| %>
      <div class="relative rounded-lg overflow-hidden shadow-lg">
        <% if media.file_type == 'image' %>
          <%= image_tag media.file.url, class: "w-full h-64 object-cover" %>
        <% elsif media.file_type == 'video' %>
          <video class="w-full h-64 object-cover" controls>
            <source src="<%= media.file.url %>" type="<%= media.content_type %>">
          </video>
        <% end %>
        
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-2">
          <h3 class="font-semibold"><%= media.title %></h3>
          <p class="text-sm"><%= media.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div> 