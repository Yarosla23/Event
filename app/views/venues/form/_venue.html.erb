<div class="p-2 md:p-3  bg-gray-50 dark:bg-gray-800 shadow-md rounded-lg border border-gray-200 dark:border-gray-700 ">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white m-4">Основная информация об мероприятии</h3>
  <div class="columns-1 md:columns-2 gap-6">
    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :name, 
        label: "Название площадки",
        placeholder: "Введите название площадки"
      ) %>
    </div>

    <div class="field m-3 mb-4 ">
      <%= render Ui::MultiselectComponent.new(
        form: form, 
        field_name: :venue_type, 
        value: Venue::TYPES, 
        selected_values: @venue.venue_type, 
        placeholder: "Выберите типы площадки",
        label: "Тип площадки"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :website,
        label: "Сайт",
        placeholder: "Введите URL сайта"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :area,
        label: "Площадь",
        type: "number", 
        step: 0.01,
        placeholder: "Введите площадь в квадратных метрах"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :email,
        label: "Электронная почта",
        placeholder: "Введите адрес электронной почты"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :phone,
        label: "Телефон",
        placeholder: "Введите номер телефона"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :address,
        label: "Адрес",
        placeholder: "Введите адрес площадки"
      ) %>
    </div>

    <div class="field mb-4">
      <%= render Ui::InputFieldComponent.new(
        form: form,
        field_name: :max_participants,
        label: "Максимальное количество гостей",
        type: "number", 
        step: 1,
        placeholder: "Введите максимальное число гостей"
      ) %>
    </div>
  </div>

  <div class="field mb-4">
    <%= render Ui::InputFieldComponent.new(
      form: form,
      field_name: :description,
      label: "Описание",
      type: "text_area",
      input_class: "whitespace-pre-wrap ",
      placeholder: "Введите описание мероприятия"
    ) %>
  </div>

  <div class="field ">
    <%= render Ui::InputFieldComponent.new(
      form: form,
      field_name: :details,
      label: "Дополнительные возможности по размещению",
      type: "text_area",
      input_class: "whitespace-pre-wrap ",
      placeholder: "Укажите особенности размещения и дополнительные возможности"
    ) %>
  </div>
</div>
