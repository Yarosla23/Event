<div class="max-w-lg mx-auto p-10 mt-10 rounded-xl shadow-2xl bg-cover bg-center dark:bg-gray-900">
  <h2 class="text-center text-4xl font-extrabold mb-6 text-gray-800 dark:text-gray-200">
    Вход
  </h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-6">
      <%= f.label "Почта", class: "block text-lg font-semibold text-gray-600 dark:text-gray-300 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: "mt-1 block w-full text-lg rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if f.object.errors[:email].any?}" %>
    </div>

    <div class="mb-6">
      <%= f.label "Пароль", class: "block text-lg font-semibold text-gray-600 dark:text-gray-300 mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password",
        class: "mt-1 block w-full text-lg rounded-lg border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if f.object.errors[:password].any?}" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center mb-6">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-500 border-gray-600 rounded focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        <%= f.label "Запомнить меня", class: "ml-2 text-sm text-gray-600 dark:text-gray-300" %>
      </div>
    <% end %>

    <div class="mt-8">
      <%= f.submit "Вход",
          class: "w-full bg-gray-600 hover:bg-gray-700 text-white text-lg font-semibold py-3 px-5 rounded-lg shadow-lg transition duration-300 ease-in-out" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-400 dark:text-gray-400">
    <%= render "devise/shared/links" %>
  </div>
</div>